<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Profile"
    tools:showIn="@layout/activity_add_profile"
    android:backgroundTint="#2196f3"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_name"
        android:id="@+id/name_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_marginTopPercent ="8%"
        app:layout_heightPercent="10%"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:paddingTop="15dp"
        android:background="#424242"
        android:textColor ="#ffffff"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_textView"
        android:layout_alignEnd="@+id/name_textView"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:id="@+id/name_editText"
        android:textColor ="#ffffff"
        android:backgroundTint="#ffffff"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/profile_semester"
        android:layout_below="@+id/name_editText"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        app:layout_marginTopPercent ="4%"
        app:layout_heightPercent="10%"
        app:layout_widthPercent ="75%"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/semester_textView"
        android:paddingTop="15dp"
        android:background="#424242"
        android:textColor ="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semester_editText"
        android:layout_alignBottom="@+id/semester_textView"
        android:layout_toEndOf="@+id/semester_textView"
        app:layout_widthPercent="25%"
        android:singleLine="true"
        android:textColor ="#ffffff"
        android:fontFamily="sans-serif"
        android:inputType="numberDecimal"
        android:backgroundTint="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_main_subject"
        android:layout_below="@+id/semester_textView"
        app:layout_marginTopPercent ="5%"
        app:layout_heightPercent="10%"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:paddingTop="15dp"
        android:background="#424242"
        android:textColor ="#ffffff"
        android:id="@+id/main_subject_textView" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"
        app:layout_marginTopPercent ="7%"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="10%"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:text="save"
        android:layout_below="@+id/main_subject_spinner"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_subject_spinner"
        android:layout_below="@+id/main_subject_textView"
        app:layout_marginTopPercent="5%"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog" />


</android.support.percent.PercentRelativeLayout>
