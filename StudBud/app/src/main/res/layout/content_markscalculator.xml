<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MarksCalculator"
    tools:showIn="@layout/activity_markscalculator"
    android:backgroundTint="#e5802c"
    android:background="#000000">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/informationswissenschaft_text_view"
    android:text="Informationswissenschaft"
    android:textSize="18sp"
    android:textAlignment="center"
    app:layout_widthPercent ="75%"
    app:layout_heightPercent ="10%"
    android:background="#71373535"
    android:onClick="onInfwissClick"
    android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medieninformatik_text_view"
        android:layout_below="@+id/informationswissenschaft_text_view"
        android:text="Medieninformatik"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_widthPercent ="75%"
        app:layout_heightPercent ="10%"
        app:layout_marginTopPercent="10%"
        android:background="#71373535"
        android:onClick="onMedienInfoClick"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bachelorarbeit_text_view"
        android:layout_below="@+id/medieninformatik_text_view"
        android:text="Bachelorarbeit"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_widthPercent ="75%"
        app:layout_heightPercent ="10%"
        app:layout_marginTopPercent="10%"
        android:background="#71373535"
        android:onClick="onBachelorWorkClick"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informationswissenschaft_mark"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_widthPercent = "20%"
        app:layout_heightPercent ="10%"
        app:layout_marginLeftPercent="80%"
        android:background="#71373535"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/informationswissenschaft_mark"
        android:id="@+id/medieninformatik_mark"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_widthPercent = "20%"
        app:layout_heightPercent ="10%"
        app:layout_marginLeftPercent="80%"
        app:layout_marginTopPercent="10%"
        android:background="#71373535"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bachelorarbeit_mark"
        android:layout_below="@+id/medieninformatik_mark"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_widthPercent = "20%"
        app:layout_heightPercent ="10%"
        app:layout_marginLeftPercent="80%"
        app:layout_marginTopPercent="10%"
        android:background="#71373535"/>

</android.support.percent.PercentRelativeLayout>
